{
  "name": "express-authx",
  "version": "1.1.0",
  "description": "Plug-and-play authentication middleware for Express with JWT, refresh tokens, RBAC, sessions, and built-in CLI.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "bin": {
    "express-authkit": "dist/bin/cli.js"
  },
  "scripts": {
    "build": "tsup && tsc -p tsconfig.build.json",
    "start": "node dist/index.js",
    "test": "jest",
    "dev": "tsx bin/cli.ts",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MehekFatima/express-authkit.git"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "keywords": [
    "express",
    "auth",
    "jwt",
    "rbac",
    "authentication",
    "middleware",
    "refresh-token",
    "cli",
    "mongodb",
    "node"
  ],
  "author": "Mehek Fatima",
  "license": "MIT",
  "files": [
    "dist",
    "bin"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@types/mongodb": "^4.0.6",
    "chalk": "^5.4.1",
    "commander": "^14.0.0",
    "cookie-parser": "^1.4.7",
    "dotenv": "^17.0.1",
    "express": "^5.1.0",
    "figlet": "^1.8.1",
    "ioredis": "^5.6.1",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^6.17.0",
    "redis": "^5.5.6"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.9",
    "@types/express": "^5.0.3",
    "@types/figlet": "^1.7.0",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/supertest": "^6.0.3",
    "jest": "^30.0.3",
    "redis-mock": "^0.56.3",
    "supertest": "^7.1.1",
    "ts-jest": "^29.4.0",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  }
}
